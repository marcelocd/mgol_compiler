<%= form_tag(current_uri, method: "get") do %>
  <div class="form-group">
    <%= label_tag 'Source Code' %>:&nbsp;&nbsp;&nbsp;
    <button type="submit">
      <%= 'Run' %>
    </button>
    <p>
      <%= text_area_tag :source_code, @lexical_analyzer.source_code,
                                      class: 'test',
                                      rows: 50,
                                      cols: 50 %>
      <textarea rows="50" cols="50" readonly>
        <% @tokens.each do |token| %>
          <%= "lexeme: #{token.lexeme}" %>
          <%= "class: #{token.token_class}" %>
          ___________________________
        <% end if !@tokens.blank? %>
      </textarea>
    </p>
  </div>
<% end %>
